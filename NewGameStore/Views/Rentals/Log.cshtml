@model IEnumerable<NewGameStore.Models.Rental>

@{
    ViewBag.Title = "Older Rentals";
}

<h2>Older Rentals</h2>

<p>
    @Html.ActionLink("Return to Rentals", "Index")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Client.FullName)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Copy.Game.Title)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Copy.CopyID)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.LentOn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DueDate)
        </th>
        <th>
            @Html.ActionLink("Price", "Log", new { sortOrder = ViewBag.PriceSortParm })
        </th>
        <th>
            @Html.ActionLink("Returned on", "Log", new { sortOrder = ViewBag.DateSortParm })
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Client.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Copy.Game.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Copy.CopyID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LentOn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DueDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReturnedOn)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.RentalID }, new { @class = "btn btn-default" }) 
                @Html.ActionLink("Delete", "Delete", new { id = item.RentalID }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
<td>
    @Html.ActionLink("Previous Page", "Log", new { page = ViewBag.CurrentPage - 1 }) |
    @Html.ActionLink("Next Page", "Log", new { page = ViewBag.CurrentPage + 1 })
</td>